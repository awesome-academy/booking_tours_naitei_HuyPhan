<form class="well form-horizontal" action=" " method="post"  id="contact_form">
<fieldset>

<legend><center><h2 class="mb-10"><b>Đăng kí tài khoản</b></h2></center></legend><br>
  <div class="form-group">
    <div class="col-md-4"></div>   
    <div class="col-md-4"> <%= render "shares/error_messages", object: f.object %></div>

  </div>
  <div class="form-group">
     <%= f.label :name, t("account.username"), class: "col-md-4 control-label" %>  
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :name,  class: "form-control" %>

      </div>
    </div>
  </div>



<!-- Text input-->
  <div class="form-group">
    <%= f.label :email, t("account.email"), class: "col-md-4 control-label" %>     
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
          <%= f.email_field :email,  class: "form-control" %>
       </div>
    </div>
  </div>
<!-- Text input-->

    <div class="form-group">
      <%= f.label :password, t("account.password"), class: "col-md-4 control-label" %>  
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
            <%= f.password_field :password,  class: "form-control" %>
          </div>
      </div>
    </div>

<!-- Text input-->

    <div class="form-group">
      <%= f.label :password_confirmation, t("account.confirmation"), class: "col-md-4 control-label" %>
        <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
           <span class="input-group-addon"><i class="fa fa-check" aria-hidden="true"></i></span>
           <%= f.password_field :password_confirmation, class: "form-control"%>
       </div>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :phone, t("account.phone"), class: "col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
              <%= f.phone_field :phone, class: "form-control"%>
      </div>
    </div>
  </div>

    <div class="form-group">
      <%= f.label :address, t("account.address"), class: "col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-address-card" aria-hidden="true"></i></span>
              <%= f.text_field :address, class: "form-control"%>
      </div>
    </div>
  </div>

<!-- Button -->
    <div class="form-group" style= "text-align: center">
      <label class="col-md-4 control-label"></label>
        <div class="col-md-4" ><br>
          <%=f.submit "Đăng kí", class: "btn btn-success", style: "padding-left: 30px; padding-right: 30px" %>
       </div>
      </div>
</fieldset>

</form>
</div>

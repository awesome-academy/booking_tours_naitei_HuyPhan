<!--about-us start -->
<section id="home" class="about-us">
  <div class="container">
    <div class="about-us-content">
      <div class="row header-image">
      </div><!--/.row-->
    </div><!--/.about-us-content-->
  </div><!--/.container-->

</section><!--/.about-us-->

<!--packages start-->
<section id="tabs" class="project-tab">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <nav>
          <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#reviews_tab" role="tab" aria-controls="nav-home" aria-selected="true">Reviews</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#my_reviews_tab" role="tab" aria-controls="nav-profile" aria-selected="false">My Review</a>
          </div>
        </nav>
        <div class="tab-content mt-3" id="nav-tabContent">
          <div class="tab-pane fade show active in" id="reviews_tab" role="tabpanel" aria-labelledby="nav-home-tab">
            <%= render "reviews" %>
          </div>
          <div class="tab-pane fade" id="my_reviews_tab" role="tabpanel" aria-labelledby="nav-profile-tab">
            <table class="table" cellspacing="0">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Tour name</th>
                  <th>Content</th>
                  <th>Point</th>
                  <th>Status</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
                <% @my_reviews.each_with_index do |review, index|%>
                  <%= render partial: "my_review", locals: {review: review, index: index} %>
                <% end %>
                <% unless @my_reviews.any? %>
                  Ban chua tao review
                <% end %>
              </tbody>
            </table>
            <%= will_paginate @my_reviews, class: "my_reviews", :param_name => 'my_reviews' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</section>
    <% if @reviews %>
  <ul class="search_results">
    <% @reviews.each do |review| %>
      <li>
        <h3>
          <%= link_to review.try(:highlight).try(:name) ?
            review.highlight.title[0].html_safe : review.tour.name, "#" %>
        </h3>
        <% if review.try(:highlight).try(:content) %>
          <% review.highlight.content.each do |snippet| %>
            <p><%= snippet.html_safe %>...</p>
          <% end %>
        <h3>
          <%= link_to review.try(:highlight).try(:date) ?
            review.highlight.title[0].html_safe : review.date, "#" %>
        </h3>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Your search did not match any documents.</p>
<% end %>
</section>


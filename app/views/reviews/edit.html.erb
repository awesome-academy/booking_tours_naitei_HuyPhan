<!--about-us start -->
<section id="home" class="about-us">
  <div class="container">
    <div class="about-us-content">
      <div class="row header-image">
      </div><!--/.row-->
    </div><!--/.about-us-content-->
  </div><!--/.container-->

</section><!--/.about-us-->

<aside>
 

<div class="container">
  <br>
  <div class="card border-0">
    <div class="row">
    	<aside class="col-sm-12">
        <div class="row">
      		<div id="form-new-review">

           <div class="col-12 col-md-4">
            <div class="img-big-wrap">
            <div>
              <%= check_image(@tour.image) %>
            </div>
            </div>

             <h3 class="title text-uppercase" style="margin-top: 10px"><%= @tour.name %></h3>
             <div class="rating info">
            <div class="stars" style="margin-top: 10px">
              <%= raw display_stars_layout @tour %>
            </div>
            <div class="mb-3 mt-3 info" style="margin-top: 10px">
            <span class="h7 text-success">
              Duaration: <%= t "duaration", count: @tour.duaration %></span>
          </div>
          <div class="mb-3 mt-3 info" style="margin-top: 10px">
            <span class="price-title">Price:</span>
            <span class="price color-price-waanbii"><%= @tour.price %>đ</span>
          </div>
          </div>

          </div>
          </div>

      		<div class="col-12 col-md-8">
  			   <div class="bg-info card border-primary rounded-0" style="p">
   				 <h3 class="title text-uppercase mb-10">
     		     Chỉnh sửa bài đánh giá của bạn
   				 </h3>
    			<!--Form with header-->
   			 <%= form_for @review, url:review_path(id: @review.id), method: :patch do |f| %>
      		<%= f.text_field :title, class: "mt-10 mb-10"%>
          <%= f.number_field :point, min:1, max:5,class: "mt-10 mb-10"%>
          <%= f.text_area :content, class: "ckeditor", id: "edit_review" %>
      		<%= f.submit "Lưu thay đổi", class: "btn btn-success mt-10" %>
    	<% end %>
    <!--Form with header-->
 	      </div>
	      </div>

    	</aside>
    </div>
  </div>
</div>



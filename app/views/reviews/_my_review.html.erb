<tr>
  <td><%= index + 1 %></td>
  <td><%= link_to review.tour.name, tour_path(id: review.tour.id) %></td>
  <td><%= review.content[0..50] << (review.content.length > 50 ? " ..." : "") %></td>
  <td><%= review.point %></td>
  <td><%= review.status %></td>
  <td><%= l review.created_at %></td>
  <td>
     <%= link_to review_path(id: review.id) do %>
      <i class="text-primary fa fa-eye" aria-hidden="true"></i>
      <% end %>
    <%= link_to review_path(id: review.id), method: :delete do %>
      <i class="text-danger fa fa-times-circle-o"></i>
    <% end %>
    <%= link_to edit_review_path(id: review.id) do %>
      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <% end %>

  </td>
</tr>

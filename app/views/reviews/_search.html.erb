<div class="row bg-info card border-primary">
   
   <div class="col-lg-3 col-md-3 col-sm-4">
    <div class="single-tab-select-box">
      <h2>Tour name</h2>
      <div class="travel-select-icon">
        <select class="form-control">
          <% @tours.each do |tours| %>
            <option value="<%=tours.name%>"><%=tours.name%></option><!-- /.option-->
          <%end %>
        </select><!-- /.select-->
      </div><!-- /.travel-select-icon -->
    </div><!--/.single-tab-select-box-->
  </div>

  <div class="col-lg-3 col-md-3 col-sm-4">
    <div class="single-tab-select-box">
      <h2>Text</h2>
      <div class="">
        <input class="form-control" style="height: 40px;">
      </div><!-- /.travel-select-icon -->
    </div><!--/.single-tab-select-box-->
  </div><!--/.col-->


  <div class="col-lg-3 col-md-3 col-sm-4">
    <div class="single-tab-select-box">
      <h2>Created at</h2>
      <div class="travel-check-icon">
        <input type="text" name="return" class="form-control" data-toggle="datepicker" placeholder="22 -01 - 2017 ">
      </div><!-- /.travel-select-icon -->
    </div><!--/.single-tab-select-box-->
  </div><!--/.col-->

  <div class="col-lg-3 col-md-3 col-sm-4">
    <div class="about-btn">
      <button  class="about-view travel-btn">
        Search
      </button><!--/.travel-btn-->
    </div><!--/.about-btn-->
  </div>
</div><!--/.row-->

<!--about-us start -->
<section id="home" class="about-us">
  <div class="container">
    <div class="about-us-content">
      <div class="row header-image">
      </div><!--/.row-->
    </div><!--/.about-us-content-->
  </div><!--/.container-->

</section><!--/.about-us-->

<div class="container">
  <br>
  <div class="card border-0">
    <div class="row">
      <aside class="col-sm-3">
        <article class="gallery-wrap">
          <div class="img-big-wrap">
            <div>
              <%= check_image(@tour.image) %>
            </div>
          </div>
        </article>
      </aside>

      <aside class="col-sm-5">
        <article class="card-body m-0 pt-0 pl-5" id="tour-info">
          <h3 class="title text-uppercase"><%= @tour.name %></h3>
          <div class="rating info">
            <div class="stars">
              <%= raw display_stars_layout @tour %>
            </div>
          </div>
          <div class="mb-3 mt-3 info">
            <span class="h7 text-success">
              Duaration: <%= t "duaration", count: @tour.duaration %></span>
          </div>
          <div class="mb-3 mt-3 info">
            <span class="price-title">Price/Person:</span>
            <span class="price color-price-waanbii"><%= number_to_currency @tour.price %></span>
          </div>
        </article>
      </aside>
    </div>
    <div class="row" style="margin-top: 20px; text-align: center;">
    	<aside class="col-sm-10 col-md-offset-1">
    		<h3 class="title text-uppercase">
    			Edit your review
    		</h3>
    		<div id="form-new-review" style="margin-top: 20px; text-align: center;">
    			<%= render "/reviews/form_new_review" %>
    		</div>
    	</aside>
    </div>
  </div>
</div>
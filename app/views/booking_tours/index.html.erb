<!--about-us start -->
<section id="home" class="about-us">
  <div class="container">
    <div class="about-us-content">
      <div class="row header-image">
      </div><!--/.row-->
    </div><!--/.about-us-content-->
  </div><!--/.container-->

</section><!--/.about-us-->

<!--packages start-->
<section id="pack" class="packages">
  <div class="container">
    <div class="gallary-header text-center">
      <h2>
        Tour cá nhân
      </h2>

    </div><!--/.gallery-header-->
    <div class="packages-content">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <table class="table table-striped table-hover table-bordered" id="tbl_booking_tours">
            <thead>
              <tr>
                <th scope="col">Số</th>
                <th scope="col">Tên tour</th>
                <th scope="col">Giá</th>
                <th scope="col", style="width: 85px">Thời hạn</th>
                <th scope="col">Tổng</th>
                <th scope="col">Ngày</th>
                <th scope="col", style="width: 85px">Số người</th>
                <th scope="col">Liên hệ</th>
                <th scope="col">Email</th>
                <th scope="col">SĐT</th>
                <th scope="col", style="width: 93px">Trạng thái</th>
                <th scope="col", style="width: 89px">Thao tác</th>
              </tr>
            </thead>

            <tbody id="booking_tours">
              <% @booking_tours.each_with_index do |booking_tour, index|%>
                <%= render partial: "booking_tour", locals: {booking_tour: booking_tour, index: index} %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div><!--/.row-->
    </div><!--/.packages-content-->
    <!--/.packages-->

    <!--packages end-->
    <%= will_paginate @booking_tours %>
  </div>
</section>

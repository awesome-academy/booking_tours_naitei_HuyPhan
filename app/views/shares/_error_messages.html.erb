<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "messages.count_message", count: object.errors.size %>.

      <ul class="padding-left-revert list-style">
        <% object.errors.full_messages.each do |msg| %>
          <li class="list-style"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

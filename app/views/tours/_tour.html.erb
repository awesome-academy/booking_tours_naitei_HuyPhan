<div class="col-md-4 col-sm-6">
  <div class="single-package-item">
    <%= check_image(tour.image) %>
    <div class="single-package-item-txt">
      <h3>
        <span><%= link_to tour.name, tour_path(tour), class: "mb-10 tour-name", style: "color: #00d8ff" %></span>
        <div class="tour-price"><%= number_to_currency(tour.price.to_i, precision: 0, unit: '') %>đ</div>
      </h3>
      <div class="packages-para"> 
        <p>
          <span> 
            <i class="fa fa-angle-right"></i>
            <%= t "duaration", count: tour.duaration %>
          </span>
          <i class="fa fa-angle-right"></i>
          <%= tour.category.name %>
        </p>
        <p>
          <i class="fa fa-angle-right"></i> Description</br>
          <%= tour.description[0..50] %>
         </p>
      </div><!--/.packages-para-->
      <div class="packages-review">
        <p>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <span><%= t "review", count: tour.reviews.view.size %></span>
        </p>
      </div><!--/.packages-review-->
      <div class="about-btn">
        <%= link_to "Đặt tour", tour_path(tour), class: "about-view packages-btn" %>
        <% if is_review? tour.id %>
          <%= link_to "Đánh giá", new_tour_review_path(tour_id: tour), class: "about-view packages-btn" %>
        <% end %>
      </div><!--/.about-btn-->
    </div><!--/.single-package-item-txt-->
  </div><!--/.single-package-item-->

</div>

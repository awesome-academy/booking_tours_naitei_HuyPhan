<div class="col-12 col-md-12">
  <!--Form with header-->
  <%= form_for @booking_tour, url: tour_booking_tours_path(@tour.id) do |f| %>
    <%= f.hidden_field :price %>
    <div class="bg-info card border-primary rounded-0">
      <%= render "/shares/error_messages", object: f.object %>
      <div class="card-header p-0" style="padding: 10px 0 10px 0;">
        <div class="text-white text-center py-2">
          <h3><i class="fa fa-info-circle"></i>Booking</h3>
          <p class="m-0">Information my booking tour</p>
        </div>
      </div>
      <div class="card-body p-3">
        <!--Body-->
        <div class="form-group gap-auto">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-clock-o text-info"></i></span>
            <%= f.text_field :duaration, value: t("duaration", count: @tour.duaration),
              class: "form-control underlined", required: true, disabled: true, style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="form-group gap-auto">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa  fa-usd text-info"></i></span>
            <%= f.text_field :total_price, value: number_to_currency(@tour.price),
              class: "form-control underlined", required: true, disabled: true,
              placeholder: "Total price" ,style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="form-group gap-auto">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-calendar-check-o text-info"></i></div>
            <%= f.text_field :start_date, class: "form-control",
              "data-toggle" => "datepicker", required: true, autofocus: true, style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-users text-info"></i></div>
            <%= f.number_field :quantity_person, value: 1, min: 1, class: "form-control",
              required: true, style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-comment text-info"></i></div>
            <%= f.text_area :note, class: "form-control", row: 4, style: "z-index: inherit;" %>
          </div>
        </div>
      </div>


      <div class="card-header p-0" style="padding: 10px 0 10px 0;">
        <div class="text-white text-center py-2">
          <h3><i class="fa fa-id-card-o"></i> Contactanos</h3>
          <p class="m-0">Con gusto te ayudaremos</p>
        </div>
      </div>
      <div class="card-body p-3">
        <!--Body-->
        <div class="form-group gap-auto">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user text-info"></i></span>
            <%= f.text_field :customer_name, value: current_user.name,
              class: "form-control underlined", required: true, style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="form-group gap-auto">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-envelope text-info"></i></div>
            <%= f.email_field :customer_email, value: current_user.email,
              class: "form-control underlined", required: true, style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="form-group gap-auto">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-phone text-info"></i></div>
            <%= f.telephone_field :customer_phone, value: current_user.phone,
              class: "form-control underlined", required: true, style: "z-index: inherit;" %>
          </div>
        </div>

        <div class="text-center padding-botton-15">
          <input type="submit" value="Booking Now!" class="btn btn-pr-cus ">
        </div>
      </div>
    </div>
  <% end %>
  <!--Form with header-->
</div>
